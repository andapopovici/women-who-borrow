    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :edition %>
    <%= form.number_field :edition, id: :book_edition %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :book_year %>
  </div>

  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn, id: :book_isbn %>
  </div>

  <div class="field">
    <%= form.label :tags %>
    <%= collection_check_boxes(:book, :tag_ids, Tag.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
